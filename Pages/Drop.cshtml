@page
@model Project.Pages.DropModel
@{
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Drop Courses</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
            background-color: #f4f4f4;
        }

        h2 {
            color: #2c3e50;
        }

       
        .container2 {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

        .course-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 10px;
            background-color: #ecf0f1;
            border-radius: 5px;
        }

        .btn-drop {
            background-color: #e74c3c;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h2>Drop Courses</h2>

 

    <div class="container2">
        <h3>Registered Courses</h3>

        @if (Model.RegisteredCourses != null && Model.RegisteredCourses.Any())
        {
            foreach (var course in Model.RegisteredCourses)
            {
                <div class="course-item">
                    <span>@course.CourseCode - Section @course.SectionNumber</span>
                    <form method="post" asp-page-handler="Drop">
                        <input type="hidden" name="CourseCode" value="@course.CourseCode" />
                        <input type="hidden" name="Section_Number" value="@course.SectionNumber" />
                        <button type="submit">Drop</button>
                    </form>
                </div>
            }
        }
        else
        {
            <p>No courses registered.</p>
        }
    </div>
</body>
</html>