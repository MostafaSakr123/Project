@page
@model Project.Pages.Make_AnnouncementModel
@{
}

<div class="text-center">
    <h1>Make Announcement</h1>
</div>

<form method="post">
    <label>Title:</label>
    <input type="text" asp-for="@Model.Title" /> <br />
    <span asp-validation-for="@Model.Title" class="text-danger">  </span><br /><br />

    <label>Description</label><br />
    <style>
        .big-input {
            height: 60px;
            font-size: 16px;
        }
    </style>

    <input type="text" asp-for="@Model.Description" class="form-control big-input" />
    <span asp-validation-for="@Model.Description" class="text-danger">  </span><br /><br />


    <button type="submit" class="btn btn-primary">Announce</button> <br /><br /> <br />





</form>
