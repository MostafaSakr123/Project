@page
@model Project.Pages.Course_DetailsModel
@{
    ViewData["Title"] = "Courrse Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<div class="container mt-4">
    @if (Model.CurrentCourse != null)
    {
        <div class="card shadow-lg mb-4 border-0">
            <div class="card-header bg-gradient-primary text-primary py-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-chalkboard-teacher fa-2x me-2"></i>
                    <div>
                        <h1 class="display-5 mb-0"><i class="bi bi-person-workspace"></i> @Model.CurrentCourse.Name</h1>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col text-center border-end">
                        <div class="text-muted small">COURSE CODE</div>
                        <div class="h2 text-primary">@Model.CurrentCourse.Code</div>
                    </div>
                    <div class="col text-center border-end">
                        <div class="text-muted small">MAJOR CODE</div>
                        <div class="h2 text-success">@Model.CurrentCourse.MajorCode</div>
                    </div>
                    <div class="col text-center border-end">
                        <div class="text-muted small">NUMBER OF SECTIONS</div>
                        <div class="h2 text-success">@Model.CurrentCourse.NoSections</div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Course not found</div>
    }
    <form method="post">
        <button type="submit"
                class="btn btn-danger mt-3"
                asp-page-handler="Return">
            <i class="bi bi-arrow-return-left"></i> Return To Professor Page
        </button>
    </form>
        </div>
    </div>
</div>