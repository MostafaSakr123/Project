@page
@model Project.Pages.Add_StudentModel
@{
}

<div class="text-center">
    <h1>Add Student to Section</h1>
    <p><strong>Course Code:</strong> @Model.CourseCode</p>
    <p><strong>Section Number:</strong> @Model.SectionNumber</p>
</div>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
{
    <div class="alert alert-danger">
        @ViewData.ModelState[string.Empty]?.Errors.First().ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Student_ID">Student ID</label>
        <input type="number" asp-for="Student_ID" class="form-control" />
        <span asp-validation-for="Student_ID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>
