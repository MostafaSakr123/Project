@page
@model Project.Pages.Professor_ViewScheduleModel
@using System.Data
@{
    ViewData["Title"] = "View Schedule";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h3><i class="bi bi-calendar-week me-2"></i>Course Schedule</h3>
    </div>
    <div class="card-body">
        <!-- Add form tag here ▼ -->
        <form method="get">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Select Course</label>
                    <select class="form-select" asp-for="SelectedCourse"
                            onchange="this.form.submit()">
                        <option value="">-- All Courses --</option>
                        @foreach (var course in Model.ProfessorCourses)
                        {
                            <option value="@course.Code">@course.Code - @course.Name</option>
                        }
                    </select>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Time</th>
                        <th>Sunday</th>
                        <th>Monday</th>
                        <th>Tuesday</th>
                        <th>Wednesday</th>
                        <th>Thursday</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.ProfessorSections.Rows)
                    {
                        <tr>
                            <td>@row["Start_Time"] - @row["End_Time"]</td>
                            <td>@(row["Day"].ToString() == "Sunday" ? row["Course_Code"] : "")</td>
                            <td>@(row["Day"].ToString() == "Monday" ? row["Course_Code"] : "")</td>
                            <td>@(row["Day"].ToString() == "Tuesday" ? row["Course_Code"] : "")</td>
                            <td>@(row["Day"].ToString() == "Wednesday" ? row["Course_Code"] : "")</td>
                            <td>@(row["Day"].ToString() == "Thursday" ? row["Course_Code"] : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>