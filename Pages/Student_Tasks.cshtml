@page
@model Project.Pages.Student_TasksModel
@{
    ViewData["Title"] = "Student Tasks";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tasks</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
            background-color: #f9f9f9;
        }

        h2 {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            color: #2c3e50;
        }
     

        .task-box {
            background: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 800px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        label, textarea {
            display: block;
            margin: 10px 0;
        }

        textarea {
            width: 100%;
            height: 100px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .submit-btn, .action-btn {
            padding: 8px 14px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 5px;
        }

        .task-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ecf0f1;
            padding: 10px 15px;
            margin-top: 10px;
            border-radius: 5px;
        }

        .submitted {
            color: green;
            font-weight: bold;
        }

        .task-label {
            font-size: 16px;
            color: #2c3e50;
        }
    </style>
</head>
<body>
    <h2>View / Submit Tasks</h2>


    <div class="task-box">

        <h3>Your Tasks</h3>

        @foreach (var task in Model.Tasks)
        {
            <div class="task-item">
                <div>
                    <span class="task-label">@task.Title</span><br />

                    @if (!string.IsNullOrEmpty(task.SubmissionLink))
                    {
                        <span class="submitted">✔ Submitted: <a href="@task.SubmissionLink" target="_blank">@task.SubmissionLink</a></span>
                    }
                    else
                    {
                        <form method="post">
                            <input type="hidden" name="TaskId" value="@task.TaskNumber" />
                            <textarea name="SubmissionLink" placeholder="Paste your link here..." required></textarea>
                            <button class="submit-btn" type="submit">Submit</button>
                        </form>
                    }
                </div>
            </div>
        }

    </div>
</body>
</html>
