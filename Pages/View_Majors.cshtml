@page
@model Project.Pages.View_MajorsModel
@{
    ViewData["Title"] = "Available Majors";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="bi bi-rocket-takeoff-fill"></i> @ViewData["Title"]
        </h1>
        <p class="lead text-muted">All Our Majors</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var maj in Model.Major)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-body text-center p-4">
                        <h3 class="card-title mb-3 text-dark">@maj.Name</h3>
                        <div class="badge bg-primary text-white rounded-pill mb-3 py-2 px-3">
                            Major Code: @maj.MajorCode
                        </div>
                        <form method="post" class="mt-auto">
                            <button asp-page-handler="Info" 
                                    asp-route-CODE="@maj.MajorCode"
                                    class="btn btn-outline-primary btn-lg w-100">
                                <i class="bi bi-info-circle"></i> View Details
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <footer class="mt-5 py-4 border-top">
        <div class="container text-center text-muted">
            <p class="mb-0">© 2025 - Project - Privacy</p>
        </div>
    </footer>
</div>