@page
@using System.Data
@model Project.Pages.ListOfStudentsModel
@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-3">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model.StudentsTable.Rows.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        @foreach (DataColumn col in Model.StudentsTable.Columns)
                        {
                            <th>@col.ColumnName</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.StudentsTable.Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                <td>@item.ToString()</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No students found in the database.
        </div>
    }
</div>

<style>
    .table {
        font-size: 14px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>